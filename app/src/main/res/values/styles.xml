<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MainMenuOptionText">
        <item name="android:textColor">@color/main_menu_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="GameOptionText" parent="DefaultStyle">
        <item name="android:textColor">@color/game_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="DefaultStyle">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GameCounterText" parent="DefaultStyle">
        <item name="android:textColor">@color/game_counter_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LevelText" parent="DefaultStyle">
        <item name="android:textColor">@color/game_counter_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GameMenuLabel" parent="DefaultStyle">
        <item name="android:textColor">@color/game_counter_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="GameWinLabel" parent="DefaultStyle">
        <item name="android:textColor">@color/game_win_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="GameWinText" parent="DefaultStyle">
        <item name="android:textColor">@color/game_win_color</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>