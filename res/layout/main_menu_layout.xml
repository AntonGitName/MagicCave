<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    android:orientation="horizontal" >

    <ru.dinter.magiccave.view.BigCandleView
        android:id="@+id/bigCandleView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center" >

        <TableRow
            android:gravity="center" >

            <Button
                android:id="@+id/choose_level_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_level_btn" />
        </TableRow>

        <TableRow
            android:gravity="center" >

            <Button
                android:id="@+id/rules_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/rules_btn" />
        </TableRow>

        <TableRow
            android:gravity="center" >

            <Button
                android:id="@+id/quit_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/quit_btn" />
        </TableRow>
    </TableLayout>

    <ru.dinter.magiccave.view.BigCandleView
        android:id="@+id/bigCandleView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>